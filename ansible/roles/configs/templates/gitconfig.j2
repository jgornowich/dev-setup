[user]
    name = {{ git_user_name | default('Your Name') }}
    email = {{ git_user_email | default('your.email@example.com') }}

[core]
    editor = nvim
    pager = less -F -X
    excludesfile = ~/.gitignore_global

[push]
    default = current

[pull]
    rebase = true

[rebase]
    autosquash = true

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = yellow
    untracked = red

[alias]
    # Basic shortcuts
    st = status -sb
    co = checkout
    br = branch
    ci = commit
    unstage = reset HEAD --
    last = log -1 HEAD
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    lga = log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    
    # More useful aliases
    whoops = reset --hard HEAD^ --no-edit
    fixup = commit --fixup
    squash = commit --squash
    root = rev-parse --show-toplevel
    
    # Show changes in working directory that haven't been staged
    wip = diff --cached
    
    # Show changes that are staged but not yet committed
    c = diff --cached
    
    # Show all conflicts
    conflicts = !git ls-files -u | cut -f 2 | sort -u
    
    # Show files that are ignored by git
    ignored = !git ls-files --others -i --exclude-standard

[init]
    defaultBranch = main

[fetch]
    prune = true

[merge]
    ff = only
    conflictstyle = diff3

[rerere]
    enabled = true
    autoupdate = true

[help]
    autocorrect = 1

[credential]
    helper = cache --timeout=3600

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[includeIf "gitdir:~/work/"]
    path = ~/work/.gitconfig

[includeIf "gitdir:~/personal/"]
    path = ~/personal/.gitconfig
